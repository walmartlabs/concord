<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="1700000" author="ybrigo@gmail.com">
        <createTable tableName="PROCESS_WAIT">
            <column name="INSTANCE_ID" type="uuid" remarks="Unique process ID">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="timestamptz" remarks="Timestamp of process creation">
                <constraints nullable="false"/>
            </column>
            <column name="CURRENT_STATUS" type="varchar(32)" remarks="Current status of a process">
                <constraints nullable="false"/>
            </column>
            <column name="WAIT_CONDITIONS" type="jsonb" remarks="Process wait conditions">
                <constraints nullable="true"/>
            </column>
            <column name="ID_SEQ" type="bigserial">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="PROCESS_WAIT" columnNames="INSTANCE_ID, CREATED_AT"/>
    </changeSet>


    <changeSet id="1400010" author="ybrigo@gmail.com" runInTransaction="false">
        <sql>
            create index concurrently IDX_PROC_WAIT_WAIT_COND_NN
            on PROCESS_WAIT (INSTANCE_ID, CREATED_AT)
            where WAIT_CONDITIONS is not null
        </sql>
    </changeSet>

</databaseChangeLog>
