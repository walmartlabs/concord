    <changeSet id="79200" author="ibodrov@gmail.com">
        <validCheckSum>ANY</validCheckSum>
        <addColumn tableName="PROCESS_QUEUE">
            <column name="REPO_ID" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="REPO_URL" type="varchar(2048)">
