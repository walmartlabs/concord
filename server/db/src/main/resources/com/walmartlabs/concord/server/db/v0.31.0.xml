    </changeSet>

    <changeSet id="31050" author="ibodrov@gmail.com">
        <addForeignKeyConstraint constraintName="FK_API_KEY_USER"
                                 baseTableName="API_KEYS" baseColumnNames="USER_ID"
                                 referencedTableName="USERS" referencedColumnNames="USER_ID"
