    </changeSet>

    <changeSet id="31020" author="ibodrov@gmail.com">
        <dropForeignKeyConstraint baseTableName="USER_PERMISSIONS" constraintName="FK_PERMISSIONS_USER"/>
    </changeSet>

    <changeSet id="31030" author="ibodrov@gmail.com">
