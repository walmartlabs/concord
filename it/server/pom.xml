        <server.image>walmartlabs/concord-server</server.image>
        <skip.socat>true</skip.socat>
        <socat.image>bobrik/socat</socat.image>
        <tmp.dir.src.mount>${java.io.tmpdir}</tmp.dir.src.mount>
        <tmp.dir>${java.io.tmpdir}</tmp.dir>
